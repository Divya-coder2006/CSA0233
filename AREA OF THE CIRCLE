#include <stdio.h>

int main() {
    float radius, area;
    float pi = 3.14159;

    // Ask the user to enter radius
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Calculate area
    area = pi * radius * radius;

    // Display result
    printf("Area of the circle = %.2f\n", area);

    return 0;
}
